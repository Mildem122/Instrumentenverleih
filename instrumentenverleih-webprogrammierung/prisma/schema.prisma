// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Instrument {
  id                 String           @id @default(cuid())
  name               String
  playingTechnique   PlayingTechnique @relation(fields: [playingTechniqueId], references: [id])
  pictureURL         String
  description        String
  playingTechniqueId String
  Devices            Device[]
}

model Device {
  id               String     @id @default(cuid())
  pictureUrl       String
  description      String
  modelName        String
  instrumentId     String
  price            String
  size             String?
  fingering        String?
  isAvailable      Boolean    @default(false)
  instrumentType   Instrument @relation(fields: [instrumentId], references: [id])
  availableDevices Int?
  Orders           Order[]
}

model User {
  id       String  @id @default(cuid())
  userName String
  password String
  name     String
  email    String  @unique
  adress   String
  Orders   Order[]
}

model PlayingTechnique {
  id                   String       @id @default(cuid())
  playingTechniqueText String
  listedInstruments    Instrument[]
}

model Manufacturer {
  id      String @id @default(cuid())
  name    String
  country String
}

model Order {
  user          User     @relation(fields: [userId], references: [id])
  device        Device   @relation(fields: [deviceId], references: [id])
  userId        String
  deviceId      String
  borrowedFrom  String
  borrowedUntil String
  orderDate     DateTime @default(now())

  orderId String @id
}
